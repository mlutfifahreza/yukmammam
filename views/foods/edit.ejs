<% layout('layouts/boilerplate')%>
<div class="container w-75">
    <h1 class="mb-4">Edit food menu</h1>
    <form class="mb-5" action="/foods/<%= food.id %>?_method=PUT" method="POST" novalidate class="validated-form">
        <!-- Title and price -->
        <div class="row">
            <div class="col mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" value="<%= food.title %>" name="food[title]">
            </div>
            <div class="col mb-3">
                <label for="price" class="form-label px-0">Price</label>
                <div class="col input-group px-0">
                    <span class="input-group-text" id="basic-addon3">$</span>
                    <input type="text" class="form-control" id="price" aria-describedby="price" value="<%= food.price %>" name="food[price]">
                </div>
            </div>
        </div>
        <!-- Image URL -->
        <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input type="url" class="form-control" id="image" value="<%= food.image %>" name="food[image]">
          </div>
        <!-- Description -->
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" rows="3" name="food[description]"><%= food.description %></textarea>
        </div>
        <div class="mb-3">
            <button class="btn btn-success w-100">Update Food</button>
        </div>
    </form>
    
</div>