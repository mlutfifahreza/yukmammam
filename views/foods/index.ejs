<% layout('layouts/boilerplate')%>
<div class="container">
  <h1 class="m-2">All Foods</h1>

  <div class="row">
    <% for( let i = 0; i < foods.length; i++ ) { %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card m-2">
          <img src="<%= foods[i].image %>" class="card-img-top p-2 " alt="<%= foods[i].title %> Image"/> 
          <div class="card-body">
            <h5 class="card-title pb-0 mb-0"><%= foods[i].title %> </h5>
            <h5 class="card-title pt-0 mt-0"><span class="badge bg-success text-white">$ <%= foods[i].price %></span> </h5>
            <p class="card-text"><%= foods[i].description %> </p>
            <a href="/foods/<%= foods[i]._id %> " class="btn btn-primary w-100">Details</a>
            
          </div>
        </div>
      </div>
    <% } %>
  </div>

</div>